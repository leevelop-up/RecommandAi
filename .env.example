# MariaDB 설정
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=root
MARIADB_PASSWORD=your_password
MARIADB_DATABASE=recommandstock

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI API (벡터화용)
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API (AI 추천용 - Free tier, https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Groq API (AI 분석용 - https://console.groq.com)
GROQ_API_KEY=your-groq-api-key

# Alpha Vantage API (미국 주식)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# 네이버 API (뉴스 검색)
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# 스크래핑 설정
SCRAPE_DELAY=1.0
REQUEST_TIMEOUT=30

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/recommandai.log
